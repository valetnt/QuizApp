            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/QuestionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallPadding"
                android:paddingTop="@dimen/mediumPadding"
                android:text="@string/Question1" />

            <TextView
                style="@style/QuestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallPadding"
                android:text="@string/Question1Text" />

            <EditText
                android:id="@+id/q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                style="@style/QuestionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallPadding"
                android:paddingTop="@dimen/mediumPadding"
                android:text="@string/Question2" />

            <TextView
                style="@style/QuestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallPadding"
                android:text="@string/Question2Text" />

            <RadioGroup
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q2a1"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smallPadding"
                    android:text="@string/Q2Option1" />

                <RadioButton
                    android:id="@+id/q2a2"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smallPadding"
                    android:text="@string/Q2Option2" />

                <RadioButton
                    android:id="@+id/q2a3"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smallPadding"
                    android:text="@string/Q2Option3" />

                <RadioButton
                    android:id="@+id/q2a4"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smallPadding"
                    android:text="@string/Q2Option4" />

            </RadioGroup>

            <TextView
                style="@style/QuestionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallPadding"
                android:paddingTop="@dimen/mediumPadding"
                android:text="@string/Question3" />

            <TextView
                style="@style/QuestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallPadding"
                android:text="@string/Question3Text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smallPadding"
                    android:text="@string/Q3Option1" />

                <CheckBox
