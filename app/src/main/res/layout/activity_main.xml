                    android:text="@string/Q9Option3" />

            </RadioGroup>

            <TextView
                style="@style/QuestionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallPadding"
                android:paddingTop="@dimen/mediumPadding"
                android:text="@string/Question10" />

            <TextView
                style="@style/QuestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallPadding"
                android:text="@string/Question10Text" />

            <RadioGroup
                android:id="@+id/radio10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q10a1"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smallPadding"
                    android:text="@string/Q10Option1" />


                <RadioButton
                    android:id="@+id/q10a2"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smallPadding"
                    android:text="@string/Q10Option2" />

                <RadioButton
                    android:id="@+id/q10a3"
                    style="@style/RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smallPadding"
                    android:text="@string/Q10Option3" />

            </RadioGroup>


            <Button
                style="@style/SubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/hugePadding"
                android:onClick="Submit"
                android:text="@string/Submit" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
