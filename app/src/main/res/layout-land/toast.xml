<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.android.quizapp.MainActivity">

    <ImageView
        android:id="@+id/toastImage"
        android:layout_width="@dimen/toastImageDimen"
        android:layout_height="@dimen/toastImageDimen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/mediumPadding"
        android:layout_marginRight="@dimen/mediumPadding"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/mediumPadding">

        <TextView
            android:id="@+id/toastScore"
            style="@style/ToastScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/YourScore" />

        <TextView
            android:id="@+id/toastMessage"
            style="@style/ToastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/YourLevel" />

    </LinearLayout>

</RelativeLayout>
